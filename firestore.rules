rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated(); // Registration
      allow update: if isOwner(userId) || isAdmin(); // Profile update
      allow delete: if isAdmin();
    }

    // Coffees
    match /coffees/{coffeeId} {
      allow read: if true; // Public catalog
      allow write: if isAdmin();
    }

    // Inquiries
    match /inquiries/{inquiryId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Settings
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Mail
    match /mail/{mailId} {
      allow create: if isAdmin(); // Only admins/system can trigger emails directly regarding potential spam
      // But actually, triggers usually run as admin. 
      // If we use 'Trigger Email' extension, we write to 'mail' collection.
      // We might restrict this to admin only, or specific authenticated users?
      // For now, restrict to admin.
      allow read: if isAdmin();
    }
  }
}
